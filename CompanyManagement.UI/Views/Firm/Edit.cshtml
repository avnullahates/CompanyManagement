@model CompanyManagement.ENTITIES.Entities.Firm

@{
	ViewData["Title"] = "Edit";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
	string approve = "Onayli";
	string notApprove = "Onayli Degil";
}
<h1>Firma Guncelleme Sayfasi</h1>

<h4>Firma</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="ID" class="control-label"></label>
				<input asp-for="ID" class="form-control" readonly />
				<span asp-validation-for="ID" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="FirmName" class="control-label"></label>
				<input asp-for="FirmName" class="form-control" readonly />
				<span asp-validation-for="FirmName" class="text-danger"></span>
			</div>
			<div class="form-group form-check">
				<label class="form-check-label">
					<input class="form-check-input" asp-for="ApprovalStatus" /> @Html.DisplayNameFor(model => model.ApprovalStatus)
				</label>
			</div>
			<div class="form-group">
				<label asp-for="OrderStartDate" class="control-label"></label>
				<input asp-for="OrderStartDate" class="form-control" />
				<span asp-validation-for="OrderStartDate" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="OrderEndDate" class="control-label"></label>
				<input asp-for="OrderEndDate" class="form-control" />
				<span asp-validation-for="OrderEndDate" class="text-danger"></span>
			</div>

			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>
<br />

@if (ViewBag.Result == "Success")
{
	<h5>Firma Guncelleme Islemi Basarili</h5>
	<table class="table table-sm table-striped table-bordered m-2">
		<thead>
			<tr>
				<th>ID</th>
				<th>Firma Adi</th>
				<th>Onay Durumu</th>
				<th>Sipariş İzin başlangıç saati</th>
				<th> Sipariş İzin bitiş saati</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>@Model.ID</td>
				<td>@Model.FirmName</td>
				<td>
					@if (Model.ApprovalStatus == true)
					{
						@approve						
					}
					else
					{
						@notApprove						
					}
				</td>
				<td>@Model.OrderStartDate</td>
				<td>@Model.OrderEndDate</td>
			</tr>
		</tbody>
	</table>
}



<div>
	<a asp-action="Index">Listeye Geri Don</a>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
