@model IEnumerable<CompanyManagement.ENTITIES.Entities.Firm>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Firma Listesi</h1>

<p>
	<a class="btn btn-success" asp-action="Create">Firma Ekle</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.ID)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.FirmName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.ApprovalStatus)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.OrderStartDate)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.OrderEndDate)
			</th>

			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.ID)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.FirmName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.ApprovalStatus)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.OrderStartDate)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.OrderEndDate)
				</td>

				<td>
					<a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-secondary btn-sm">Duzenle</a>
				</td>
			</tr>
		}
	</tbody>
</table>
