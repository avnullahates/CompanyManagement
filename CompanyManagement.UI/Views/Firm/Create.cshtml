@model CompanyManagement.ENTITIES.Entities.Firm

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Firma Ekleme Sayfasi</h1>

<h4>Firma</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirmName" class="control-label"></label>
                <input asp-for="FirmName" class="form-control" />
                <span asp-validation-for="FirmName" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    
                    <input class="form-check-input" asp-for="ApprovalStatus" /> 
                    @Html.DisplayNameFor(model => model.ApprovalStatus)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="OrderStartDate" class="control-label"></label>
                <input asp-for="OrderStartDate" class="form-control" />
                <span asp-validation-for="OrderStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderEndDate" class="control-label"></label>
                <input asp-for="OrderEndDate" class="form-control" />
                <span asp-validation-for="OrderEndDate" class="text-danger"></span>
            </div>
           
            <br />  
            <div class="form-group">
                <input  type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
