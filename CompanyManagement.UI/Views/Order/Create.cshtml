@using CompanyManagement.ENTITIES.Entities;
@model CompanyManagement.UI.Models.VM.OrderAddEditVM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Siparis Ekleme Sayfasi</h1>

<h4>Urun</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="@Model.Order.CustomerName" class="control-label"></label>
				<input asp-for="@Model.Order.CustomerName" class="form-control" />
				<span asp-validation-for="@Model.Order.CustomerName" class="text-danger"></span>
			</div>
			
			

			<div class="form-group">
				<label asp-for="@Model.Order.FirmID" class="control-label"></label>

				<select asp-for="@Model.Order.FirmID" class="form-control">
					<option>Lutfen Seciniz</option>
					@foreach (Firm item in Model.Firms)
					{
						<option value="@item.ID">@item.FirmName</option>
					}
				</select>
				<span asp-validation-for="@Model.Order.FirmID" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="@Model.Order.ProductID" class="control-label"></label>

				<select asp-for="@Model.Order.ProductID" class="form-control">
					<option>Lutfen Seciniz</option>
					@foreach (Product item in Model.Products)
					{
						<option value="@item.ID">@item.ProductName</option>
					}
				</select>
				<span asp-validation-for="@Model.Order.ProductID" class="text-danger"></span>
			</div>
			<br />

			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Listeye Geri Don</a>
</div>


@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
