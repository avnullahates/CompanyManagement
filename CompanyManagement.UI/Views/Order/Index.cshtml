@model IEnumerable<CompanyManagement.ENTITIES.Entities.Order>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Siparis Listesi</h1>

<p>
	<a class="btn btn-success"  asp-action="Create">Siparis Ekle</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.ID)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.CustomerName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.OrderDate)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.ProductID)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.FirmID)
			</th>
			
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.ID)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.CustomerName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.OrderDate)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.ProductID)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.FirmID)
				</td>

				
			</tr>
		}
	</tbody>
</table>
